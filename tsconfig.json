{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./Js",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "module": "es2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./Ts"
  },
  "include": [
    "Ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}